- var pageTitle = 'Online TV'


doctype html
html(lang="en")
  head
    title= pageTitle
    style
      include styles/style.css
      include styles/normalize.css
  body
    include modules/header

    section.section-banner
      img(src="../src/images/sectionBanner.png", alt="Banner").section-banner__image
      .container
        .banner 
          h1.banner-title Zack Snyder's Justice League

          .banner-info
            span.banner-info__year 2021
            span.banner-info__age 18+
            span.banner-info__time 4h 2min
            span.banner-info__rating 8.8

          p.banner_text Determined to ensure Superman's ultimate sacrifice was not in vain, Bruce Wayne aligns forces with Diana Prince with plans to recruit a team of metahumans to protect the world from an approaching threat of catastrophic.
          .banner-control
            button.banner-control__btn.banner-control__btn-main Watch 
            button.banner-control__btn.banner-control__btn-more More information
    section.section
      .container 
        h2.section__h2 
          a(href="#").section__h2-link Trending TV Show &#62;
        .movies 
          .movies-item
             a(href="#").movies__link
              img(src="../src/images/posters/1.png", alt="").movies__img
          .movies-item
             a(href="#").movies__link
              img(src="../src/images/posters/2.png", alt="").movies__img
          .movies-item
             a(href="#").movies__link
              img(src="../src/images/posters/3.png", alt="").movies__img
          .movies-item
             a(href="#").movies__link
              img(src="../src/images/posters/4.png", alt="").movies__img
          .movies-item
             a(href="#").movies__link
              img(src="../src/images/posters/5.png", alt="").movies__img
          .movies-item
             a(href="#").movies__link
              img(src="../src/images/posters/6.png", alt="").movies__img

    include modules/footer
